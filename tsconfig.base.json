{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tiagojacinto/backend-primitives": [
        "libs/backend-primitives/src/index.ts"
      ],
      "@tiagojacinto/core-primitives": [
        "libs/core-primitives/src/index.ts"
      ],
      "@tiagojacinto/domain-primitives": [
        "libs/domain-primitives/src/index.ts"
      ],
      "@tiagojacinto/shared-primitives": [
        "libs/shared-primitives/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
