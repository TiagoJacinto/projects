{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tiagojacinto/backend-primitives": [
        "shared/backend-primitives/src/index.ts"
      ],
      "@tiagojacinto/core-primitives": ["shared/core-primitives/src/index.ts"],
      "@tiagojacinto/domain-primitives": [
        "shared/domain-primitives/src/index.ts"
      ],
      "@tiagojacinto/meal-delivery-service-users-acceptance-tests": [
        "libs/meal-delivery-service/users/acceptance-tests/src/index.ts"
      ],
      "@tiagojacinto/meal-delivery-service-users-backend": [
        "libs/meal-delivery-service/users/meal-delivery-service-users/src/index.ts"
      ],
      "@tiagojacinto/testing-primitives": [
        "shared/testing-primitives/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
